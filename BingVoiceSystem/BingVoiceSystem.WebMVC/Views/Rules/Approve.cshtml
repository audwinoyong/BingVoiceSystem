@using BingVoiceSystem.Data
@model PendingRule
@{
    ViewBag.Title = "Approve Rule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Approve Rule</title>
</head>
<body>
    <h2>Approve Rule</h2>
    <h3>Confirm to approve this rule?</h3>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.RuleID)
        <table class="table table-bordered">
            <tr><td>@Html.LabelFor(x => x.Question, "Question")</td><td>@Html.DisplayFor(x => x.Question)</td></tr>
            <tr><td>@Html.LabelFor(x => x.Answer, "Answer")</td><td>@Html.DisplayFor(x => x.Answer)</td></tr>
        </table>

        <input type="submit" class="btn btn-success" value="Approve" style="padding-right: 10px" />
        @Html.ActionLink("Cancel", "RulesList", null, new { @class = "btn btn-default" });
    }
</body>
</html>