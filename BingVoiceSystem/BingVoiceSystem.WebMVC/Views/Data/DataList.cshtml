@using BingVoiceSystem.Business
@model Data

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rules Report</title>
</head>
<body>
    <h2>Rules Report</h2>
    <hr />
    <h3>Approved Rules</h3>
    @if (Model.DataList.Count > 0)
    {
        <table class="table table-bordered table-responsive table-hover">
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Actor</th>
                <th colspan="2">Action</th>
            </tr>
            @foreach (var Item in Model.DataList)
            {
                for (int i = 0; i < Item.Actors.Count; i++)
                {
                    <tr>
                        @if (i == 0)
                        {
                            <td rowspan="@Item.Actors.Count">@Item.Movie</td>
                            <td rowspan="@Item.Actors.Count">@Item.Genre</td>

                        }
                        @if (Item.Actors.Count > i)
                        {
                            <td>@Item.Actors[i]</td>
                        }
                        @if (i == 0)
                        {
                            <td rowspan="@Item.Actors.Count">@Html.ActionLink("Edit", "DataEdit", new { MovieName = Item.Movie }, new { @class = "btn btn-primary" })</td>
                            <td rowspan="@Item.Actors.Count">@Html.ActionLink("Delete", "Delete", new { MovieName = Item.Movie }, new { @class = "btn btn-danger" })</td>
                        }
                    </tr>
                }
            }
        </table>

        <form method="get" action="DataAdd">
            <input type="submit" class="btn btn-primary" value="Add New Rule" />
        </form>
    }
    else
    {
        <h4>There is no data to display.</h4>
    }
</body>
</html>